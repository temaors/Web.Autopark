@model AutoparkDAL.Entities.Vehicle

@{
    Layout = "_Layout";
}

<form asp-action="Create" asp-controller="Vehicle">
    <div class="p-2">
        <div class="form-group">
            <label asp-for="Model">Model:</label>
            <input type="text" asp-for="Model" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Model">Type:</label>
            <select asp-for="VehicleTypeId" asp-items="@ViewBag.TypeList" class="form-control form-control-sm"></select>
        </div>
        <div class="form-group">
            <label asp-for="Year">Manufacture year:</label>
            <input asp-for="Year" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="RegistrationNumber">Registration number:</label>
            <input asp-for="RegistrationNumber" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Weight">Weight:</label>
            <input asp-for="Weight" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Color">Color:</label>
            <input asp-for="Color" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Mileage">Mileage:</label>
            <input asp-for="Mileage" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Volume">Volume:</label>
            <input asp-for="Volume" class="form-control form-control-sm" />
        </div> 
        <div class="form-group">
            <label asp-for="FuelConsumption">Fuel consumption:</label>
            <input asp-for="FuelConsumption" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success m-2" />
        </div>
    </div>
</form>

<div>
    <a type="button" asp-controller="Vehicle" asp-action="Index" class="btn m-2" style="color: #41464b"><i class="fa-solid fa-arrow-right-from-bracket"></i> Back to List</a>
</div>