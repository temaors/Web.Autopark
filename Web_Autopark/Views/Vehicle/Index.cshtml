@model IEnumerable<AutoparkDAL.Entities.Vehicle>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="container p-2">
    <div class="row pt-2">
        <div class="col-6">
            <h2 class="text-primary">Vehicles list</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Vehicle" asp-action="Create" type="button" class="btn btn-outline-info">
                Add new Vehicle
            </a>
        </div>
    </div>
    
    <br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
        <thead>
        <tr>
            <th>Model</th>
            <th>Type</th>
            <th>Manufacture year</th>
            <th>Registration number</th>
            <th>Mileage</th>
            <th>Weight</th>
            <th>Color</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Model</td>
                    <td>@item.VehicleType.Name</td>
                    <td>@item.Year</td>
                    <td>@item.RegistrationNumber</td>
                    <td>@item.Mileage</td>
                    <td>@item.Weight</td>
                    <td>@item.Color</td>
                    <th>
                        <a type="button" asp-controller="Vehicle" asp-action="GetInfo" class="btn-outline-info" asp-route-id="@item.VehicleId">Manage</a>
                    </th>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No Vehicles in database</p>
    }
</div>