@model IEnumerable<AutoparkDAL.Entities.Vehicle>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Vehicles list</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Vehicle" asp-action="Create" type="button" class="btn btn-outline-info">
                Add new Vehicle
            </a>
        </div>
    </div>
    
    <br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
        <thead>
        <tr>
            <th>Model</th>
            <th>Manufacture year</th>
            <th>Registration number</th>
            <th>Mileage</th>
            <th>Weight</th>
            <th>Color</th>
            <th>Fuel Consumption</th>
            <th>Volume</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Model</td>
                    <td>@item.Year</td>
                    <td>@item.RegistrationNumber</td>
                    <td>@item.Mileage</td>
                    <td>@item.Weight</td>
                    <td>@item.Color</td>
                    <td>@item.FuelConsumption</td>
                    <td>@item.Volume</td>
                <th>
                    <a type="button" asp-controller="Vehicle" asp-action="Edit" asp-route-id="@item.VehicleId" class="btn btn-info w-25">Edit</a>
                    <a type="button" asp-controller="Vehicle" asp-action="Delete" class="btn btn-danger w-25" asp-route-id="@item.VehicleId">Delete</a>
                </th>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No Vehicles in database</p>
    }
</div>