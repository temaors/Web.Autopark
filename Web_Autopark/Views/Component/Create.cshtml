@model AutoparkDAL.Entities.Component

@{
    Layout = "_Layout";
}
<h3 style="color: #0dcaf0">Adding component</h3>
<br/>
<form asp-action="Create" asp-controller="Component">
    <div>
        <div class="form-group" style="display: flex">
            <label asp-for="Name">Component Name: </label>
            <input type="text" asp-for="Name" class="form-control form-control-sm w-25" />
        </div>
        <br/>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</form>
<br/>
<div>
    <a type="button" asp-controller="Component" asp-action="Index" class="btn m-2" style="color: #41464b"><i class="fa-solid fa-arrow-right-from-bracket"></i> Back to List</a>
</div>