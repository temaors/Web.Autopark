@model IEnumerable<AutoparkDAL.Entities.VehicleType>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Vehicle types list</h2>
        </div>
        <div class="col-6">
            <a asp-controller="VehicleType" asp-action="Create" type="button" class="btn btn-outline-info">
                Add new Vehicle Type
            </a>
        </div>
    </div>
    
    <br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
            <tr >
                <th>Name</th>
                <th>Tax Coefficient</th>
                <th> </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @* <th>@item.VehicleTypeId</th> *@
                    <td>@item.Name</td>
                    <td>@item.TaxCoefficient</td>
                    <th>
                        <a type="button" asp-controller="VehicleType" asp-action="Edit" asp-route-id="@item.VehicleTypeId" class="btn btn-info w-25">Edit</a>
                        <a type="button" asp-controller="VehicleType" asp-action="Delete" class="btn btn-danger w-25" asp-route-id="@item.VehicleTypeId">Delete</a>
                    </th>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No Vehicle types in database</p>
    }
</div>

