@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<AutoparkDAL.Entities.OrderItem>

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = ViewBag.Vehicle  + " order info:";
}
<h2>@ViewData["Title"]</h2>
<br/>
<table class="table">
    <br/>
    <tr>
        <th>Part Name: </th>
        <th>Part Number: </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Component.Name</td>
            <td>@item.Quantity</td>
        </tr>
    }
</table>
<br/>
<div>
    <a asp-action="Index" asp-controller="Order">Back to List</a>
</div>